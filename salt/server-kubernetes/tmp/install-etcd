mkdir -p /opt/etcd/bin
cd /opt/etcd
curl -L https://github.com/coreos/etcd/releases/download/v3.0.13/etcd-v3.0.13-linux-amd64.tar.gz -o etcd-v3.0.13-linux-amd64.tar.gz
tar xzvf etcd-v3.0.13-linux-amd64.tar.gz -C bin --strip-components=1
ln -s /opt/etcd/bin/etcd /usr/local/bin/etcd; chmod u+x /usr/local/bin/etcd
ln -s /opt/etcd/bin/etcdctl /usr/local/bin/etcdctl; chmod u+x /usr/local/bin/etcdctl
date +%s > /opt/etcd/etcd.installed
rm /opt/etcd/*.gz
